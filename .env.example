# JIRA Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Target Platform: 'shortcut' or 'clickup' (default: shortcut)
TARGET_PLATFORM=shortcut

# Shortcut Configuration (if TARGET_PLATFORM=shortcut)
SHORTCUT_API_TOKEN=your-shortcut-api-token

# Optional: Default mapping configurations for Shortcut
DEFAULT_SHORTCUT_TEAM_ID=
DEFAULT_SHORTCUT_PROJECT_ID=

# ClickUp Configuration (if TARGET_PLATFORM=clickup)
CLICKUP_API_TOKEN=your-clickup-api-token
CLICKUP_TEAM_ID=your-team-id
CLICKUP_SPACE_ID=your-space-id
CLICKUP_LIST_ID=your-default-list-id

# Optional: Custom field ID for storing JIRA external ID (for idempotent migrations)
# Create a custom field in ClickUp and paste its ID here
CLICKUP_EXTERNAL_ID_FIELD_ID=